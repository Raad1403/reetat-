generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          Int       @id @default(autoincrement())
  name                        String
  companyName                 String?   // اسم الشركة (اختياري)
  email                       String    @unique
  phone                       String?
  passwordHash                String
  subscriptionPlan            String   @default("FREE")
  subscriptionEndAt           DateTime? // نهاية الاشتراك المدفوع إن وجدت
  adCredits                   Int      @default(0)
  usedTrialAds                Int      @default(0)
  emailVerified               Boolean  @default(true)
  verificationToken           String?  @unique
  verificationTokenExpiresAt  DateTime?
  createdAt                   DateTime  @default(now())
  updatedAt                   DateTime  @updatedAt

  projects                    Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  city        String?
  budget      String?  // يمكن لاحقًا تحويلها لرقم أو عملة
  description String?
  status      String   @default("draft")
  logoUrl     String?  // رابط الشعار الرئيسي للمشروع (اختياري)
  publicId    String?  @unique // معرف عام اختياري لرابط عرض المشروع
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int

  generatedContent GeneratedContent?
  logos            ProjectLogo[]
  images           ProjectImage[]
}

model GeneratedContent {
  id              Int      @id @default(autoincrement())
  project         Project  @relation(fields: [projectId], references: [id])
  projectId       Int      @unique
  heroAd          String
  instagramPost   String
  whatsappMessage String
  logoIdea        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ProjectLogo {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  url       String
  createdAt DateTime @default(now())
}

model ProjectImage {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  url       String
  kind      String   @default("generated") // نوع الصورة (مولدة / محسّنة)
  createdAt DateTime @default(now())
}
